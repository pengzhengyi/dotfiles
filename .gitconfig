[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[user]
    name = pengzhengyi
    email = zhengyi_peng@brown.edu
[pull]
    rebase = false
[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --all --graph
    br = branch
    l = log --all --decorate --graph --pretty=oneline
    lv = log --all --decorate --graph --pretty=tformat:'commit: %C(bold red)%h%Creset %C(red)<%H>%Creset %C(bold magenta)%d %Creset%ndate: %C(bold yellow)%cd %Creset%C(yellow)%cr%Creset%nauthor: %C(bold blue)%an%Creset %C(blue)<%ae>%Creset%n%C(cyan)%s%n%Creset'
    type = cat-file -t
    dump = cat-file -p
    ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
[core]
    autocrlf = input
    safecrlf = false
